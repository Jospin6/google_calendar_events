<div id="<%= dom_id event %>" class="grid grid-cols-6 gap-4">
    <div class="span-cols-2">
        <h3>Event Participents</h3>
        <% @event.email_guest_list.each do |guest| %>
            <div class="mb-4">
                <h5 class="mt-0"><%= guest %></h5>
            </div>
        <% end %>
    </div>
    <div class="span-cols-4">
        <h3>Event Details</h3>
        <p>
            <strong>Title:</strong>
            <%= @event.title %>
        </p>
          <hr>
          <p>
            <strong>Start date:</strong>
            <%= formatted_datetime(@event.start_date) %>
          </p>
          <hr>
          <p>
            <strong>End date:</strong>
            <%= formatted_datetime(@event.end_date) %>
          </p>
          <p>
            <strong>Description:</strong>
            <%= @event.description %>
          </p>
    </div>
</div>
