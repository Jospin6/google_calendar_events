<%= form_with(model: event, class: "contents") do |form| %>
  <% if event.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-lg mt-3">
      <h2><%= pluralize(event.errors.count, "error") %> prohibited this event from being saved:</h2>

      <ul>
        <% event.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  
  <%= form.hidden_field :user_id, value: current_user.id %>
  <%= form.hidden_field :latitude, id: :latitude %>
  <%= form.hidden_field :longitude, id: :longitude %>
  
  <div class="mt-4">
    <%= form.label :title %>
    <%= form.text_field :title, 
      placeholder: "Title (ex: family meeting)",
      class: "block focus:outline-none focus:ring-0 border-none 
        outline-none text-3xl font-bold py-2 mt-2 w-full" %>
  </div>

  <div class="mt-4">
    <%= form.label :description %>
    <%= form.rich_text_area :description, class: "block border-none outline-none py-2 mt-2 w-full"%>
  </div>

  <div class="mt-4">
    <%= form.label :venue %>
    <%= form.text_field :venue, 
      placeholder: "Venue",
      class: "block focus:outline-none focus:ring-0 border-none 
        outline-none text-3xl font-bold py-2 mt-2 w-full" %>
  </div>

  <div class="mt-4">
    <%= form.label :guest_list %>
    <%= form.text_field :guest_list, 
      placeholder: "Guest list (ex: example@gmail.com, guest@gmail.com)",
      class: "block focus:outline-none focus:ring-0 border-none 
        outline-none text-3xl font-bold py-2 mt-2 w-full"%>
  </div>

  <div class="mt-4">
    <%= form.label :start_date %>
    <%= form.datetime_field :start_date, class: "block focus:outline-none focus:ring-0 border-none 
        outline-none text-3xl font-bold py-2 mt-2 w-full" %>
  </div>

  <div class="mt-4">
    <%= form.label :end_date %>
    <%= form.datetime_field :end_date, class: "block focus:outline-none focus:ring-0 border-none 
        outline-none text-3xl font-bold py-2 mt-2 w-full" %>
  </div>

  <div class="inline">
    <%= form.submit class: "rounded-lg py-3 px-5 bg-blue-600 text-white inline-block font-medium cursor-pointer" %>
  </div>
<% end %>
