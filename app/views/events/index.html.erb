<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>

  <% content_for :title, "Events" %>

  <div class="flex justify-between items-center">
    <h1 class="font-bold text-4xl">Events</h1>
    <%= link_to "New event", new_event_path, class: "rounded-lg py-3 px-5 bg-blue-600 text-white block font-medium" %>
  </div>

  <div id="events" class="grid grid-cols-8 gap-4">
    <% @events.each do |event| %>
      <div class="col-span-2 shadow rounded-lg mb-4 p-2">
        <h3><%= event.title %></h3>
        <p><span class="font-[500]">Start Time: </span><%= formatted_datetime(event.start_date) %></p>
        <p><span class="font-[500]">End Time: </span><%= formatted_datetime(event.end_date) %></p>
        <button class="w-full h-[35px] rounded-lg bg-yellow-900 text-white mt-4">Details</button>
      </div>

      <%= render event %>
      <p>
        <%= link_to "Show this event", event, class: "ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
      </p>
    <% end %>
  </div>
</div>
